{
    "version": 2,
    "env": {
      "LD_LIBRARY_PATH": "/usr/lib64:/usr/lib"
    },
    "builds": [
      {
        "src": "api/index.php",
        "use": "vercel-php@latest"
      },
      {
        "src": "public/**/*.php",
        "use": "vercel-php@latest"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/index.php"
      },
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ]
  }
  